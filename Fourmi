#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#include <time.h>
#define Nnour 31*31
int rand1(void){
    srand(time(NULL));
    return rand()%4;
}

struct position {
    int x;
    int y;
};
struct environment {
    struct position fourmi;/* position fourmi de coordonnées x y */
    struct position nourriture[Nnour];// position de la nourriture
    int tour;//Nombred de touts depuis que le fourmi est sorti du nid
};
struct position move_v1(struct position p){
    printf("donner les positions x et y de la fourmi")
    int a = rand1();
    switch (a) {
   	 case 0/*déplacement vers le haut*/:
        p.y = p.y + 1;
        if p.y > 32 //si le déplacement dépasse le cadre alors retourne a sa postion antérieur
            p.y = p.y - 1;
        else break;
        break;
   	 case 1/*déplacement vers le bas */:
        p.y = p.y - 1;
        if (p.y < 0)
            p.y = p.y + 1;
        else break;
        break;
   	 case 2/*déplacemet vers la droite*/:
        p.x = p.x + 1;
        if (p.x > 32)
            p.y = p.y - 1;
        else break;
        break;
   	 case 3/*déplacement vers la gauche*/:
        p.x = p.x - 1;
        if (p.x <0)
            p.y = p.y + 1;
        else break;
        break;
   	 default:
   		 puts("Erreur de programmation située dans le switch ou rand");
   		 break;
    }
};
